<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/parent"
    app:cardElevation="7dp"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:id="@+id/txtShopName"
            android:layout_toEndOf="@+id/image"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp"
            android:textStyle="bold"
            android:textSize="20sp"
            /> <!-- make text sizes into predetermined values -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Genre"
            android:id="@+id/txtGenre"
            android:layout_below="@+id/txtShopName"
            android:layout_toEndOf="@+id/image"
            android:layout_marginEnd="7dp"
            android:textSize="12sp"
            /> <!-- make text sizes into predetermined values -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Price"
            android:id="@+id/txtEstimatedPrice"
            android:layout_below="@+id/txtShopName"
            android:layout_toEndOf="@+id/txtGenre"
            android:textSize="12sp"
            /> <!-- make text sizes into predetermined values -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access"
            android:id="@+id/txtAccess"
            android:layout_below="@+id/txtEstimatedPrice"
            android:layout_toEndOf="@+id/image"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="7dp"
            android:textSize="12sp"
            /> <!-- make text sizes into predetermined values -->



    </RelativeLayout>


</androidx.cardview.widget.CardView>